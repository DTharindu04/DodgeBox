<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_menu_scene"
    tools:context=".MenuActivity"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/recordImage"
        android:layout_width="62dp"
        android:layout_height="57dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="21dp"
        android:layout_marginBottom="147dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/record_image"
        android:src="@drawable/records" />

    <ImageButton
        android:id="@+id/playGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/recordImage"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/playgame"
        android:src="@drawable/menu_ball_play" />

    <TextView
        android:id="@+id/recordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/recordImage"
        android:layout_marginStart="-51dp"
        android:layout_marginLeft="-51dp"
        android:layout_marginTop="60dp"
        android:layout_toEndOf="@+id/recordImage"
        android:layout_toRightOf="@+id/recordImage"
        android:text="@string/default_record"
        android:textColor="@color/colorText"
        android:textSize="35sp"
        android:textStyle="bold"
        tools:ignore="RelativeOverlap" />

    <ImageButton
        android:id="@+id/howTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/playGame"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/howTo"
        android:src="@drawable/howto" />

    <ImageButton
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/howTo"
        android:layout_alignRight="@+id/howTo"
        android:layout_below="@+id/howTo"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/settings"
        android:src="@drawable/settings" />
</RelativeLayout>